# ============================================
# Telegram Bot Configuration
# ============================================
BOT_TOKEN=your_telegram_bot_token_here
BOT_USERNAME=your_bot_username
WEBAPP_URL=https://your-domain.com
ADMIN_IDS=123456789,987654321

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=tamagotchi
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=tamagotchi_db
DATABASE_URL=postgresql+asyncpg://tamagotchi:your_secure_password_here@postgres:5432/tamagotchi_db

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:your_redis_password_here@redis:6379/0
CELERY_BROKER_URL=redis://:your_redis_password_here@redis:6379/1
CELERY_RESULT_BACKEND=redis://:your_redis_password_here@redis:6379/2

# ============================================
# MinIO S3 Configuration
# ============================================
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_minio_password_here
MINIO_BUCKET_PETS=tamagotchi-pets
MINIO_BUCKET_ASSETS=tamagotchi-assets

# ============================================
# Security
# ============================================
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# ============================================
# AI Image Generation (Optional)
# ============================================
STABILITY_API_KEY=your_stability_ai_key
OPENAI_API_KEY=your_openai_key
AI_GENERATION_ENABLED=true

# ============================================
# Payments (Telegram Stars)
# ============================================
PAYMENT_PROVIDER_TOKEN=your_payment_provider_token
PREMIUM_PRICE_STARS=100

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO
API_URL=https://api.your-domain.com

# ============================================
# Feature Flags
# ============================================
ENABLE_PVP=true
ENABLE_BREEDING=true
ENABLE_MARKET=true
ENABLE_GUILDS=false
ENABLE_AI_GENERATION=true

# ============================================
# Game Balance
# ============================================
HUNGER_DECAY_PER_HOUR=5
HAPPINESS_DECAY_PER_HOUR=3
ENERGY_RECOVERY_PER_HOUR=10
MAX_PETS_PER_USER=10
BREEDING_COOLDOWN_HOURS=168
